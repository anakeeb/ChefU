package com.company;

import java.io.*;
import java.net.*;

//Method one java.net.http url Connection
public class Method1Manipulation {
    private static HttpURLConnection connection;
    public static void main(String[] args) {

        BufferedReader reader;
        String line;
        StringBuffer responseContent = new StringBuffer();
        try {
            URL url = new URL("https://jsonplaceholder.typicode.com/albums");  //website api
            connection = (HttpURLConnection) url.openConnection();

            //request setup
            connection.setRequestMethod("GET");
            connection.setConnectTimeout(5000);
            connection.setReadTimeout(5000);

            int status = connection.getResponseCode();
            //System.out.println(status);

            if (status > 299) {   //tests for erros and outputs error of there is one
                reader = new BufferedReader(new InputStreamReader(connection.getErrorStream()));
                while((line = reader.readLine()) != null) {
                    responseContent.append(line);
                }
                reader.close();
            } else {
                reader = new BufferedReader(new InputStreamReader(connection.getInputStream()));
                while((line = reader.readLine()) != null) {
                    responseContent.append(line);
                    responseContent.append("\n");
                }
                reader.close();
            }

            //System.out.println(responseContent.toString());

        } catch (MalformedURLException e) {
            e.printStackTrace();
        } catch (IOException e) {
            e.printStackTrace();

        } finally {
            connection.disconnect(); //disconnects from server, and leaves you with output
        }



        String test = "userId" ;
        String responseContentString = responseContent.toString();
        String responseContentString2 = responseContentString.toString();
        int i = 0;
        String printPiece = responseContentString.substring((responseContentString.indexOf(test)), (responseContentString.indexOf(test) + 7));
        String printPiece2 = responseContentString2.substring((responseContentString2.indexOf(test)), (responseContentString2.indexOf(test) + 7));


        while (responseContentString.contains(test)) {
           int firstO = responseContentString.indexOf(test);
           responseContentString = responseContentString.substring(firstO + test.length());
           i++;
        }
        System.out.println(i + " recipes were found with that ingredient. Here they are:");

        while (responseContentString2.contains(test)) {
            System.out.print("\n" + printPiece2);
            int firstO = responseContentString2.indexOf(test);
            responseContentString2 = responseContentString2.substring(firstO + test.length());
        }
    }
}
